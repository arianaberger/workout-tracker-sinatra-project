<h3>Edit workout</h3>

<p>

<form action="/workouts/<%= @workout.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  Type:
  <select name="workout[style]">
    <option value="emom" <%= 'selected' if @workout.style == "emom" %>>EMOM</option>
    <option value="amrap" <%= 'selected' if @workout.style == "amrap" %>>AMRAP</option>
    <option value="time_cap" <%= 'selected' if @workout.style == "time_cap" %>>Time Cap</option>
    <option value="for_time" <%= 'selected' if @workout.style == "for_time" %>>For Time</option>
  </select>
</br>

Enter name: <input type="text" name="workout[name]">
</br>

Enter time: <input type="text" name="workout[time]" value="<%= @workout.time %>"></br>
Enter rounds (if applicable): <input type="text" name="workout[rounds]" value="<%= @workout.rounds %>">
</p>

  <p>Movement(s):</br>
    <i>Missing a movement? Make sure to first manage your movements <a href="/movements">here</a>.</i>
  </p>

    <select name="movement_1[name]">
    <option value="select" selected>Select Movement</option>
    <% @user_movements.each do |m| %>
      <option value="<%=m.name%>" <%= 'selected' if @workout_movements[0] && m.name.downcase == @workout_movements[0].keys[0] %>><%=m.name%></option>
    <% end %>
  </select>

  Weight: <input type="text" name="movement_1[weight]" value="<%= @workout_movements[0].values[0][:weight] unless !@workout_movements[0]%>">
  Reps: <input type="text" name="movement_1[reps]" value="<%= @workout_movements[0].values[0][:reps] unless !@workout_movements[0]%>">

</br>
    <select name="movement_2[name]">
    <option value="select" selected>Select Movement</option>
    <% @user_movements.each do |m| %>
      <option value="<%=m.name%>" <%= 'selected' if @workout_movements[1] && m.name.downcase == @workout_movements[1].keys[0] %>><%=m.name%></option>
    <% end %>
  </select>

  Weight: <input type="text" name="movement_2[weight]" value="<%= @workout_movements[1].values[0][:weight] unless !@workout_movements[1]%>">
  Reps: <input type="text" name="movement_2[reps]" value="<%= @workout_movements[1].values[0][:reps] unless !@workout_movements[1]%>">

</br>

  <select name="movement_3[name]">
  <option value="select" selected>Select Movement</option>
  <% @user_movements.each do |m| %>
  <option value="<%=m.name%>" <%= 'selected' if @workout_movements[2] && m.name.downcase == @workout_movements[2].keys[0] %>><%=m.name%></option>
  <% end %>
  </select>

  Weight: <input type="text" name="movement_3[weight]" value="<%= @workout_movements[2].values[0][:weight] unless !@workout_movements[2]%>">
  Reps: <input type="text" name="movement_3[reps]" value="<%= @workout_movements[2].values[0][:reps] unless !@workout_movements[2]%>">


  <p><input type="submit" value="Update Workout"></p>
</form>
